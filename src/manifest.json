{
  "name": "Form Validator",
  "short_name": "Form Validator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Provide analysis of form autocomplete usage",

  "permissions": [
     "tabs",
     "activeTab",
     "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html"
  }
}
