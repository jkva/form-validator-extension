{
  "name": "Cogsistency",
  "short_name": "Cogsistency",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Creating consistent UI for common element types",

  "permissions": [
     "tabs",
     "activeTab",
     "<all_urls>"
  ],

  "background": {
    "scripts": ["events.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html"
  }
}
